{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // Allow console.log
        "no-console": "off",
        // Allow ++ for for loops
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
    },
    "settings" : {
        // Do not throw error while import "aws-sdk"
        "import/core-modules": [ "aws-sdk", "ask-sdk-core" ]
    }
}
